<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="335" prefWidth="335" style="-fx-background-color: #ffffff" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dzieniu2.controller.employee.ProductContainerController">
    <top>
        <Label fx:id="nameLabel" alignment="CENTER" prefHeight="36.0" prefWidth="335.0" text="Label" />
    </top>
    <center>
        <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" layoutX="73.0" layoutY="73.0" pickOnBounds="true" />
    </center>
    <bottom>
        <HBox alignment="center" prefHeight="100">
            <children>
                <JFXButton fx:id="lessButton" buttonType="RAISED" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #ffffff;" text="-" />
                <TextField fx:id="amountField" prefHeight="30.0" prefWidth="30.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></TextField>
                <JFXButton fx:id="moreButton" buttonType="RAISED" mnemonicParsing="false" prefHeight="31.0" prefWidth="36.0" style="-fx-background-color: #ffffff;" text="+">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></JFXButton>
                <JFXButton fx:id="addButton" buttonType="RAISED" mnemonicParsing="false" prefHeight="31.0" prefWidth="101.0" style="-fx-background-color: #ffffff;" text="Dodaj">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></JFXButton>
            </children>
        </HBox>
    </bottom>
</BorderPane>
